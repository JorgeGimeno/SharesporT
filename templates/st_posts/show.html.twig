{% for p in arrayPost %}

<div class="card gedf-card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex justify-content-between align-items-center">
                <div class="mr-2">
                    <img class="rounded-circle" width="45" src="https://picsum.photos/50/50" alt="">
                </div>
                <div class="ml-2">
                    <div class="h5 m-0"> {{ p.usuario.nick }} </div>

                    <div class="h7 text-muted"> {{ p.usuario.nombre }} {{ p.usuario.apellidos }} </div>
                    <div class="h7 text-muted"> {{ p.deporte.nombre }} </div>
                </div>
            </div>
            <div>
                <div class="dropdown">
                    <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-ellipsis-h"></i>
                                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                        <div class="h6 dropdown-header">Configuration</div>
                        <a class="dropdown-item" href="#">Save</a>
                        <a class="dropdown-item" href="#">Hide</a>
                        <a class="dropdown-item" href="#">Report</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i>{{p.fechaHora|date("d-m-Y H:m:s")}}</div>


        <p class="card-text">
            {{ p.contenido }}
        </p>
    </div>
    <div class="card-footer">
        <a href="#" class="card-link"><i class="fa fa-gittip"></i> Like</a>
        <a href="#" class="card-link"><i class="fa fa-comment"></i> Comment</a>

        <a href="https://twitter.com/share" class="card-link ">
            <i class="fa fa-twitter-square fa-2x" aria-hidden="true"></i></a>

        <a href="https://facebook.com/share" class="card-link ">
            <i class="fa fa-facebook-square fa-2x" aria-hidden="true"></i></a>


        <a href="https://api.whatsapp.com/send?phone=9986128665&text='www.sharesport.com' " class="card-link">
            <i class="fa fa-whatsapp fa-2x text-success" aria-hidden="true"></i></a>

    </div>
</div>
{% else %} No hay registros
{% endfor %}

<div class="my-3">
{% if maxPages > 1 %}
    <ul>
        {%if thisPage > 1 %}
            <li class="d-inline mr-3">
                {# <a href="{{ path('main', {currentPage: thisPage-1 < 1 ? 1 : thisPage-1}) }}">«</a> #}
                <button class="btn btn-outline-info btn-sm" onclick='ns.postCargarPagina({{ thisPage-1 < 1 ? 1 : thisPage-1 }})' href="#">Ant</button>
            </li>
        {% endif %}

        {# Render each page number #}
        {% for i in 1..maxPages %}
            <li class="d-inline mr-3">
                {# <a href="{{ path('main', {currentPage: i}) }}">{{ i }}</a> #}
                <button class="btn btn-info btn-sm"  onclick='ns.postCargarPagina({{ i }})' href="#">{{ i }}</buttton>
            </li>
        {% endfor %}

        {# `»` arrow #}
        {%if thisPage < maxPages %}
            <li class="d-inline mr-3">
                {# <a href="{{ path('main', {currentPage: thisPage+1 <= maxPages ? thisPage+1 : thisPage}) }}">»</a> #}
                <button class="btn btn-outline-info btn-sm" onclick='ns.postCargarPagina({{ thisPage+1 <= maxPages ? thisPage+1 : thisPage }})' href="#">Sig</button>
            </li>
        {% endif %}
    </ul>
{% endif %}
</div>