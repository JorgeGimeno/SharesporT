{% extends 'base.html.twig' %}

{% block title %}Hello FiltroBusquedaController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; margin-top: 100px; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="container">
        {{ form_start(form, {'action':'/filtro_busqueda'}) }}
            {{form_widget(form.deportes)}}
            {{form_widget(form.ciudades)}}
            <hr>
            <button type="submit" class="btn btn-primary">Buscar</button>
        {{ form_end(form) }}
    <div>
    <div class="container">
        {% for p in listaPosts %}
            {{p.contenido}}<br>
        {% endfor %}
    </div>
</div>
{% endblock %}
