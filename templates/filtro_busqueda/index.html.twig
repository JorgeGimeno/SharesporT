

{% block body %}

    <div class="example-wrapper" id="filtropost">
        <div class="card gedf-card">
            
                <div class="row justify-content-between align-items-center m-2">
                {{ form_start(form) }}
                    <div class="col-sm-10 mr-0">
                        <ul class="list-group flex-row">
                            <li class="d-inline mr-3" >{{form_widget(form.deportes, { 'id': 'deporteSelected' })}}</li>
                            <li class="d-inline">{{form_widget(form.ciudades, { 'id': 'ciudadSelected' })}}</li>
                        </ul>  
                    </div> 
                {{ form_end(form) }}
                    <div class="col-sm-2 mr-0 " >
                        <ul class="list-group justify-content-center flex-row ">
                            <li class="d-inline mr-1" ><button onclick="enviarFiltros()" class="btn btn-secondary fa fa-search "></button></li>
                            <li class="d-inline"><button onclick="ns.quitarFiltroPosts()" class="btn btn-danger fa fa-ban "></button></li>          
                        </ul>   
                    </div>
                </div>
        </div>
    <div>
    <script>
        function enviarFiltros(){
            deporte = document.getElementById('deporteSelected');
            ciudad = document.getElementById('ciudadSelected');

            ns.cargarPostsFiltro(deporte.value, ciudad.value);
        }

    </script>

{% endblock %}
